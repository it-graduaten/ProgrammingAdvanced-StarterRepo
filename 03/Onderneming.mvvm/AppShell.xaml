<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Onderneming.mvvm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Onderneming.mvvm"
    xmlns:view="clr-namespace:Onderneming.mvvm.Views"   
    Shell.FlyoutBehavior="Flyout"
    Title="Onderneming.mvvm">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Voorbeeld"
        ContentTemplate="{DataTemplate view:Voorbeeld}"
        Route="Voorbeeld" />

</Shell>
